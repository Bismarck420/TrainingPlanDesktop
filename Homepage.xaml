<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TrainingPlanDesktop.Homepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrainingPlanDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas Name="can">
        <MenuBar >
            <MenuBarItem x:Name="Bearbeiten">
                <MenuFlyoutItem Text="Add Workouts" Click="AddWorkout"/>
                <MenuFlyoutItem Text="Add Exercises" Click="AddExercise"/>
            </MenuBarItem>
        </MenuBar>
        <StackPanel Name="MainPanel" Margin="40" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">

            <TextBlock Text="Add your first Workout plan!" Margin="10"/>
            <Button Content="Add" Click="AddWorkout" Margin="10"/>
        </StackPanel>
    </Canvas>
</Page>
