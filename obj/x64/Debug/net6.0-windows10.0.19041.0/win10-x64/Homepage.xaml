<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TrainingPlanDesktop.Homepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrainingPlanDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:ConnectionId='2' Name="can">
        <MenuBar >
            <MenuBarItem x:ConnectionId='5' x:Name="Bearbeiten">
                <MenuFlyoutItem x:ConnectionId='6' Text="Add Workouts"                   />
                <MenuFlyoutItem x:ConnectionId='7' Text="Add Exercises"                    />
            </MenuBarItem>
        </MenuBar>
        <StackPanel x:ConnectionId='3' Name="MainPanel" Margin="40" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">

            <TextBlock Text="Add your first Workout plan!" Margin="10"/>
            <Button x:ConnectionId='4' Content="Add"                    Margin="10"/>
        </StackPanel>
    </Canvas>
</Page>

